    <rect x="50" y="80" width="150" height="180" fill="#ffffff" opacity="0.2"/>
    
    <!-- Furniture silhouettes -->
    <rect x="80" y="200" width="80" height="50" rx="5"/>
    <rect x="200" y="180" width="60" height="70" rx="5"/>
    <rect x="280" y="190" width="40" height="60" rx="5"/>
    
    <!-- Paint roller -->
    <rect x="180" y="120" width="40" height="6" rx="3"/>
    <rect x="175" y="115" width="6" height="16" rx="3"/>
    <line x1="181" y1="131" x2="181" y2="160" stroke="#ffffff" stroke-width="2"/>
  </g>
  
  <!-- Text -->
  <text x="200" y="40" text-anchor="middle" font-family="Arial, sans-serif" font-size="18" font-weight="bold" fill="#ffffff">
    Modern Living Room
  </text>
  <text x="200" y="60" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#e5e7eb">
    Interior Painting Project
  </text>
  
  <!-- Placeholder indicator -->
  <text x="200" y="280" text-anchor="middle" font-family="Arial, sans-serif" font-size="8" fill="#ffffff" opacity="0.5">
    Portfolio Placeholder - Replace with actual project photo
